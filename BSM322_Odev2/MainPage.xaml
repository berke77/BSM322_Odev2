<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSM322_Odev2.Views.MainPage"
             Title="Ana Sayfa">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

            <Image
    Source="profile_image.jpg"
    HeightRequest="400"
    WidthRequest="400"
    Aspect="AspectFit"
    HorizontalOptions="CenterAndExpand" />

            <Label 
                Text="Berke Kaş"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label
                Text="Bartın Üniversitesi Bilgisayar Mühendisliği"
                FontSize="20"
                TextColor="{StaticResource Gray500}"
                HorizontalOptions="Center" />
            <Label
    Text="3.Sınıf Öğrenicisi"
    FontSize="20"
    TextColor="{StaticResource Gray500}"
    HorizontalOptions="Center" />

            <Frame
                BackgroundColor="{StaticResource Primary}"
                Padding="20"
                CornerRadius="10">
                <Label
                    Text="Görsel Programlama Dersi - Ödev 2"
                    TextColor="White"
                    FontSize="18"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
            </Frame>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>